// 背景图片
bg-image($url)
  background-image: url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image: url($url + "@3x.png")

// 不换行
no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

// 扩展点击区域
extend-click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px

dot()
  position relative
  &:before
    content ""
    position absolute
    left 0
    right 0
    bottom -10px
    background $color-theme
    width 5px
    height 5px
    margin auto
    border-radius 100%
box-show-down()
  box-shadow 0 1px 4px 2px rgba(0,0,0,.1)
